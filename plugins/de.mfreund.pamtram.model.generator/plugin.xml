<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="de.mfreund.pamtram.model.generator.exportMetaModelSectionMenuCategory"
            defaultHandler="de.mfreund.pamtram.model.generator.handler.ExportMetaModelSectionHandler"
            id="de.mfreund.pamtram.model.generator.exportMetaModelSection"
            name="exportMetaModelSection">
         <commandParameter
               id="de.mfreund.pamtram.model.generator.exportMetaModelSection.includeCrossReferencesParameter"
               name="IncludeCrossReferences"
               optional="false">
         </commandParameter>
         <commandParameter
               id="de.mfreund.pamtram.model.generator.exportMetaModelSection.includeContainedElementsParameter"
               name="IncludeContainedElements"
               optional="false">
         </commandParameter>
      </command>
      <category
            id="de.mfreund.pamtram.model.generator.exportMetaModelSectionMenuCategory"
            name="PAMTraM: Export MetaModelSection">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any">
         <menu
               id="de.mfreund.pamtram.model.generator.exportMetaModelSectionMenu"
               label="PAMTraM: Export MetaModelSection">
            <command
                  commandId="de.mfreund.pamtram.model.generator.exportMetaModelSection"
                  label="Export only selected elements"
                  style="push">
               <parameter
                     name="de.mfreund.pamtram.model.generator.exportMetaModelSection.includeCrossReferencesParameter"
                     value="0">
               </parameter>
               <parameter
                     name="de.mfreund.pamtram.model.generator.exportMetaModelSection.includeContainedElementsParameter"
                     value="0">
               </parameter>
            </command>
            <command
                  commandId="de.mfreund.pamtram.model.generator.exportMetaModelSection"
                  label="Export selected and contained elements"
                  style="push">
               <parameter
                     name="de.mfreund.pamtram.model.generator.exportMetaModelSection.includeCrossReferencesParameter"
                     value="0">
               </parameter>
               <parameter
                     name="de.mfreund.pamtram.model.generator.exportMetaModelSection.includeContainedElementsParameter"
                     value="1">
               </parameter>
            </command>
            <command
                  commandId="de.mfreund.pamtram.model.generator.exportMetaModelSection"
                  label="Export selected, contained and referenced elements"
                  style="push">
               <parameter
                     name="de.mfreund.pamtram.model.generator.exportMetaModelSection.includeCrossReferencesParameter"
                     value="1">
               </parameter>
               <parameter
                     name="de.mfreund.pamtram.model.generator.exportMetaModelSection.includeContainedElementsParameter"
                     value="1">
               </parameter>
            </command>
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <adapt
                           type="org.eclipse.emf.ecore.EObject">
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </menu>
      </menuContribution>
   </extension>

</plugin>
